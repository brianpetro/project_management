<div class="span8">
	<p>Use this partial to arrange project show for review</p>
	<table class="table table-hover table-bordered">
		<thead>
		  <tr><td><strong>Blueprints</strong></td></tr>
		</thead>
		<tbody>
		  <% @project.blueprints.each do |blueprint| %>
		    <tr>
		      <td><%= link_to blueprint.title, [@project, blueprint] %></td>
					<td><%= link_to 'Overview', project_blueprint_path(@project, blueprint.id), :class => 'btn' %></td>
		      <td><a href="#myModal-<%= blueprint.id %>" role="button" class="btn" data-toggle="modal">Preview</a></td>
		    </tr>
		    <div id="myModal-<%= blueprint.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		        <h3 id="myModalLabel"><%= blueprint.id %></h3>
		      </div>
		      <div class="modal-body">
		        <img src="<%= blueprint.bpu %>" />
		      </div>
		      <div class="modal-footer">
		        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		      </div>
		    </div>
		  <% end %>
		</tbody>
	</table>

	<table class="table table-hover table-bordered">
		<thead>
		  <tr><td><strong>Notes</strong></td></tr>
		</thead>
		<tbody>
		  <% @project.notes.each do |note| %>
		    <tr>
		      <td><%= truncate note.note, :length => 60 %></td>
					<td><%= link_to 'Open', [@project, note], :class => 'btn' %></td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
</div>
<div class="span4">
	<%= render 'reviewer-sidebar' %>
</div>
