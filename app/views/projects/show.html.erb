<p id="notice"><%= notice %></p>

<p>
  <b>Id:</b>
  <%= @project.id %>
</p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<ol>
  <strong>Participants:</strong>
  <% @project.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ol>

<table class="table table-hover table-bordered">
  <thead>
    <tr><td><strong>Blueprints</strong></td></tr>
  </thead>
  <tbody>
    <% @project.blueprints.each do |blueprint| %>
      <tr>
        <td><%= link_to blueprint.id, [@project, blueprint] %></td>
	<td><%= link_to 'Open', blueprint.loc, :class => 'btn' %></td>
      <tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover table-bordered">
  <thead>
    <tr><td><strong>Notes</strong></td></tr>
  </thead>
  <tbody>
    <% @project.notes.each do |note| %>
      <tr>
        <td><%= note.note %></td>
	<td><%= link_to 'Open', [@project, note], :class => 'btn' %></td>
      <tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
