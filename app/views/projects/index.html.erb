<h1>Listing projects</h1>

<table class="table table-hover table-bordered">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.id %></td>
    <td><%= project.name %></td>
    <td><%= link_to 'Show', project, :class => 'btn' %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %></td>
  </tr>
<% end %>
</table>

<br />

