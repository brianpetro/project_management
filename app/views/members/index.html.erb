<h1>Listing members of <%= @group.name %></h1>
<%= link_to 'New Member', new_group_member_path, :class => 'btn' %>
<table class="table table-hover">
  <tr>
    <th>Member</th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.user_id %></td>
    <td><%= link_to 'Remove Member', [@group, member], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>




