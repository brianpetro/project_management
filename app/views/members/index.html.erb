<h1>Listing members</h1>

<table class="table">
  <tr>
    <th>Group</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.group_id %></td>
    <td><%= member.user_id %></td>
    <td><%= link_to 'Show', [@group, @member], :class => 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_group_member_path(@group, member), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', [@group, member], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Member', new_group_member_path, :class => 'btn' %>
