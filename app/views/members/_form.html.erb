<%= simple_form_for([@group, @member]) do |f| %>


  <div class="form-inputs">
    <%= f.hidden_field :group_id, value: @group.id %>
		<%= f.label :user_id, 'Enter the name of the desired participant.' %>
    <%= f.text_field :user_id, data: {autocomplete_source: User.order(:name).map(&:name)} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
