<h1>Listing participants</h1>

<table class="table table-bordered">
  <tr>
    <th>Project</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @participants.each do |participant| %>
  <tr>
    <td><%= participant.project_id %></td>
    <td><%= participant.user_id %></td>
    <td><%= link_to 'Show', [@project, participant], class: 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_project_participant_path(@project, participant), class: 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', [@project, participant], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Participant', new_project_participant_path, class: 'btn btn-small' %>
