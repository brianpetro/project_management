<%= form_for [@project, @blueprint] do |f| %>

	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<br>
		<%= f.hidden_field :author, value: current_user.name %>
		<% unless params[:type] == 'discussion' %>
    	<%= f.file_field :bpu %>
		<% end %>
	</p>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
