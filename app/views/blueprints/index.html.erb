<div class="row-fluid">
	<div class="span8">
		<h1>Listing blueprints</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Title</th>
					<th>bpu</th>
					<th>Timestamp</th>
					<th>Actions</th>
				</tr>
			<tbody>
				<% @blueprints.each do |blueprint| %>
					<tr>
						<td><strong><%= blueprint.title %></strong></td>
						<td><%= blueprint.bpu.to_s[80..-1] %></td>
						<td><%= blueprint.created_at %></td>
						<td><%= link_to 'Show', [@project, blueprint], :class => 'btn btn-mini' %></td>
						<td><%= link_to 'Edit', edit_project_blueprint_path(@project, blueprint), :class => 'btn btn-mini' %></td>
						<td><%= link_to 'Destroy', [@project, blueprint], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<br>

		<%= link_to 'New Blueprint', new_project_blueprint_path, :class => 'btn' %>
	</div>
	<div class="span4">
		<%= render 'index-sidebar' %>
	</div>
</div>
