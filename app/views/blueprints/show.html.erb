<div class="row-fluid">
	<div class="span8">
		<p id="notice"><%= notice %></p>

		<p>
			<b>Title:</b>
			<%= @blueprint.title %>
		</p>

		<p>

			<a href="<%= @blueprint.bpu %>" class="btn">Open File</a>

			<%= render 'preview-modal' %>

		</p>

		<p>
			<b>Belongs to project:</b>
			<%= @blueprint.project_id %>
		</p>

		<p>
			<b>Created:</b>
			<%= @blueprint.created_at %>
		</p>


		<table class="table table-hover table-bordered">
			<thead><tr><td><strong>Notes:</strong><%= link_to 'Add Note', new_project_note_path(@project, :blueprint_id => @blueprint.id), :class => 'btn' %></td></tr></head>
			<tbody>

			</tbody>
		</table>

		<ul id="notes" data-update-url="<%= sort_project_notes_url %>">
			<% @notes.each do |note| %>
				<%= content_tag_for :li, note do %>
					<span class="handle">[sort]</span>
					<strong><%= best_in_place [@project, note], :note %></strong> <br>
					<%= best_in_place [@project, note], :note_text %>
				<% end %>
			<% end %> 
		</ul>



		<%= link_to 'Edit', edit_project_blueprint_path(@blueprint), :class => 'btn btn-mini' %> |
		<%= link_to 'Back', project_blueprints_path, :class => 'btn btn-mini' %>
	</div>
	<div class="span4">
		<%= render 'show-sidebar' %>
	</div>
</div>
